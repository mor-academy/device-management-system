<div class="w-full overflow-hidden rounded-lg shadow-xs border">
  <div class="w-full">
    <table class="w-full whitespace-no-wrap">
      <thead>
        <tr class="text-xs font-semibold tracking-wide text-left text-gray-800 uppercase border-b bg-gray-50">
          <% if is_action_import %>
            <th class="px-4 py-3"><%= t ".select"%></th>
          <% end %>
          <th class="px-4 py-3"><%= t ".id"%></th>
          <th class="px-4 py-3"><%= t ".name" %></th>
          <th class="px-4 py-3"><%= t ".code" %></th>
          <th class="px-4 py-3"><%= t ".status" %></th>
          <th class="px-4 py-3"><%= t ".brand" %></th>
          <th class="px-4 py-3"><%= t ".category" %></th>
          <th class="px-4 py-3"><%= t ".office" %></th>
          <th class="px-4 py-3"><%= t ".input_date" %></th>
          <% unless is_action_import %>
            <th class="px-4 py-3"><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
      <tbody class="bg-white divide-y" id="<%= "devices" unless is_action_import %>" is="turbo-frame">
        <% if is_action_import %>
          <%= render @devices %>
        <% else %>
          <tr id="devices_skeleton">
            <%= render "devices_skeleton" %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% unless is_action_import %>
      <%= turbo_frame_tag :devices_pagination, src: devices_path(format: :turbo_stream) %>
    <% end %>
  </div>
</div>
<% if is_action_import && devices.any? %>
  <%= submit_tag t(".submit"), class:"text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 my-2"%>
<% end %>
